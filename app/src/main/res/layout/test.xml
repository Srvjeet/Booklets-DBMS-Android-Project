<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_margin="8dp"
    app:cardPreventCornerOverlap="true"
    app:strokeColor="@android:color/white"
    android:outlineProvider="none"
    android:padding="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="70.3dp"
            android:layout_height="100.3dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/testimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                tools:src="@drawable/blink_imges" />
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="11.7dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/testtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="20sp"
                tools:text="Blink: The Power of Thinking Without Thinking" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/testauthor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="#a0a7b0"
                android:textSize="14sp"
                tools:text="Malcolm Gladwell" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>